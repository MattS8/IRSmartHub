<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IRSmartHub" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TextAppearance Header -->
    <style name="Base.V0.TextAppearance.Header" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme.TextAppearance.Header" parent="Base.V0.TextAppearance.Header" />

    <!-- TextAppearance SubHeader -->
    <style name="Base.V0.TextAppearance.SubHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.TextAppearance.SubHeader" parent="Base.V0.TextAppearance.SubHeader" />

    <!-- Control Button -->
    <style name="Base.V0.Button.Control" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/roboto_light</item>
    </style>
    <style name="AppTheme.Button.Control" parent="Base.V0.Button.Control"/>

    <!-- Image Button -->
    <style name="Base.V0.Button.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="background">?selectableItemBackgroundBorderless</item>
    </style>
    <style name="AppTheme.Button.ImageButton" parent="Base.V0.Button.ImageButton"/>
</resources>