<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/remoteLayoutRoot">

        <com.ms8.irsmarthub.remote_control.remote.views.RemoteLayoutView
            android:id="@+id/remoteLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_remote_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            />

        <TextView
            android:id="@+id/txtCreateFirstRemoteP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/remoteLayout"
            app:layout_constraintEnd_toEndOf="@id/remoteLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/TextAppearance.RemoteHintText"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="20sp"
            android:maxLines="1"
            android:text="@string/hint_create_new_remote"
            android:drawableEnd="@drawable/ic_new_remote"
            android:drawablePadding="0dp"
            />

        <TextView
            android:id="@+id/txtCreateFirstRemoteP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/remoteLayout"
            app:layout_constraintEnd_toEndOf="@id/remoteLayout"
            app:layout_constraintTop_toBottomOf="@id/txtCreateFirstRemoteP1"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/TextAppearance.RemoteHintText"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="20sp"
            android:maxLines="1"
            android:text="@string/hint_create_new_remote_ending"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
