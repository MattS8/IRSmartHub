<resources>

    <!--
        Application Themes
    -->

    <!-- Base application theme -->
    <style name="Base.V0.AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="AppTheme" parent="Base.V0.AppTheme"/>

    <!-- Splash screen theme -->
    <style name="Base.V0.SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_logo</item>
    </style>
    <style name="SplashTheme" parent="Base.V0.SplashTheme"/>

    <!--
        Text Appearances
    -->

    <!-- TextAppearance Splash Screen Header -->
    <style name="Base.V0.TextAppearance.SplashHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextAppearance.SplashHeader" parent="Base.V0.TextAppearance.SplashHeader" />

    <!-- TextAppearance Splash Screen SubHeader -->
    <style name="Base.V0.TextAppearance.SplashSubHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_light</item>
    </style>
    <style name="TextAppearance.SplashSubHeader" parent="Base.V0.TextAppearance.SplashSubHeader" />

    <!-- TextInputAppearance Splash SignIn -->
    <style name="Base.V0.TextInputAppearance.SplashSignIn" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorControlNormal">@color/colorTextControlWhite</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
    <style name="TextInputAppearance.SplashSignIn" parent="Base.V0.TextInputAppearance.SplashSignIn" />

    <!-- TextAppearance Remote Button -->
    <style name="TextAppearance.RemoteButtonText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TextAppearance Remote Layout (Hint Text) -->
    <style name="TextAppearance.RemoteHintText" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TextAppearance Toolbar -->
    <style name="TextAppearance.ToolbarText" parent="TextAppearance.MaterialComponents.Overline" >
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--
        Button Themes
    -->
    <!-- Button Splash SignIn -->
    <style name="Base.V0.SplashTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorTextControlWhite</item>
        <item name="android:backgroundTint">@color/bg_splash</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">4dp</item>
    </style>
    <style name="SplashTheme.Button" parent="Base.V0.SplashTheme.Button" />

    <style name="SplashTheme.Button.Colored" parent="SplashTheme.Button" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/colorTextControlWhite</item>
        <item name="android:backgroundTint">@color/bg_splash_colored</item>
    </style>

</resources>
