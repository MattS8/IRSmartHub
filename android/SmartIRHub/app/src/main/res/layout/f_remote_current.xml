<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryExtraDark"
            android:id="@+id/remoteLayoutRoot"
    >
        <TextView
                android:id="@+id/txtCreateFirstRemoteP1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/remoteLayout"
                app:layout_constraintEnd_toEndOf="@id/remoteLayout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/AppTheme.TextAppearance.Header"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="20sp"
                android:maxLines="1"
                android:text="@string/new_remote_prompt"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:drawableEnd="@drawable/ic_new_remote_icon"
                android:drawablePadding="8dp"
        />

        <TextView
                android:id="@+id/txtCreateFirstRemoteP2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/remoteLayout"
                app:layout_constraintEnd_toEndOf="@id/remoteLayout"
                app:layout_constraintTop_toBottomOf="@id/txtCreateFirstRemoteP1"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/AppTheme.TextAppearance.Header"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="20sp"
                android:maxLines="1"
                android:text="@string/icon_period"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
        />

        <com.ms8.smartirhub.android.remote_control.views.RemoteLayoutView
                android:id="@+id/remoteLayout"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rmt_bg"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
        </com.ms8.smartirhub.android.remote_control.views.RemoteLayoutView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
