<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="56dp"
              android:background="@color/colorCardDark"
              android:foreground="?android:selectableItemBackground"
>

    <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp" android:id="@+id/imgTemplatePreview"
            android:layout_marginTop="8dp" android:layout_marginBottom="16dp" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:contentDescription="Template Image"/>

    <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="56dp" android:id="@+id/tvTitle"
            tools:text="Template Title" android:textAppearance="@style/AppTheme.TextAppearance.SplashHeader"
            android:textSize="16sp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"/>



</LinearLayout>