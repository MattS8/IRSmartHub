<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content" android:minHeight="56dp">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvSignalTitle" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" tools:text="IR Signal Title"
                android:textAppearance="@style/AppTheme.TextAppearance.SplashHeader" android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/tvIrSignalCode"/>
        <TextView
                app:layout_constraintTop_toBottomOf="@+id/tvSignalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvIrSignalCode"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                app:layout_constraintHorizontal_bias="0.0" tools:text="Code: 0xFFAAA"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>