<resources>

    <!-- Main Theme -->
    <style name="Base.V0.AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="AppTheme" parent="Base.V0.AppTheme"/>

    <!-- Appbar Overlay Theme -->
    <style name="Base.V0.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="Base.V0.AppTheme.AppBarOverlay"/>

    <!-- Popup Overlay Theme -->
    <style name="Base.V0.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="Base.V0.AppTheme.PopupOverlay"/>

    <!-- TextAppearance SubHeader -->
    <style name="Base.V0.TextAppearance.SubHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/robot_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.TextAppearance.SubHeader" parent="Base.V0.TextAppearance.SubHeader"/>

    <!-- TextAppearance Splash Screen SubHeader -->
    <style name="Base.V0.TextAppearance.SplashSubHeader" parent="Base.V0.TextAppearance.SubHeader">
        <item name="fontFamily">@font/roboto_light</item>
    </style>
    <style name="AppTheme.TextAppearance.SplashSubHeader" parent="Base.V0.TextAppearance.SplashSubHeader"/>

    <!-- TextAppearance Splash Screen Header -->
    <style name="Base.V0.TextAppearance.SplashHeader" parent="Base.V0.TextAppearance.SubHeader">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme.TextAppearance.SplashHeader" parent="Base.V0.TextAppearance.SplashHeader"/>

    <!-- TextInputAppearance Splash SignIn -->
    <style name="Base.V0.TextInputAppearance.SplashSignIn" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorControlNormal">@color/colorControlNormalWhite</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
    <style name="AppTheme.TextInputAppearance.SplashSignIn" parent="Base.V0.TextInputAppearance.SplashSignIn"/>

    <!-- Button Colored Splash SignIn -->
    <style name="Base.V0.Button.SplashSignIn.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">4dp</item>
    </style>
    <style name="AppTheme.Button.SplashSignIn.Colored" parent="Base.V0.Button.SplashSignIn.Colored"/>

    <!-- Button Splash SignIn -->
    <style name="Base.V0.Button.SplashSignIn" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:backgroundTint">@color/splash_button_bg</item>
        <item name="android:elevation">2dp</item>
        <item name="android:translationZ">4dp</item>
    </style>
    <style name="AppTheme.Button.SplashSignIn" parent="Base.V0.Button.SplashSignIn"/>

    <!-- TextAppearance Dialog Header -->
    <style name="Base.V0.TextAppearance.DialogTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/robot_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.TextAppearance.DialogTitle" parent="Base.V0.TextAppearance.DialogTitle"/>
</resources>
