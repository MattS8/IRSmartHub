<resources>

    <!-- Main Theme -->
    <style name="Base.V0.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="AppTheme" parent="Base.V0.AppTheme"/>

    <!-- Appbar Overlay Theme -->
    <style name="Base.V0.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="Base.V0.AppTheme.AppBarOverlay"/>

    <!-- Popup Overlay Theme -->
    <style name="Base.V0.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="Base.V0.AppTheme.PopupOverlay"/>

    <!-- TextAppearance SubHeader -->
    <style name="Base.V0.TextAppearance.SubHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/robot_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTheme.TextAppearance.SubHeader" parent="Base.V0.TextAppearance.SubHeader"/>

    <!-- TextAppearance Splash Screen SubHeader -->
    <style name="Base.V0.TextAppearance.SplashSubHeader" parent="Base.V0.TextAppearance.SubHeader">
        <item name="fontFamily">@font/roboto_light</item>
    </style>
    <style name="AppTheme.TextAppearance.SplashSubHeader" parent="Base.V0.TextAppearance.SplashSubHeader"/>

    <!-- TextAppearance Splash Screen Header -->
    <style name="Base.V0.TextAppearance.SplashHeader" parent="Base.V0.TextAppearance.SubHeader">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme.TextAppearance.SplashHeader" parent="Base.V0.TextAppearance.SplashHeader"/>


</resources>
